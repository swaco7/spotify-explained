<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.example.spotifyexplained.model.enums.LoadingState"/>
        <import type="android.view.View" />
        <import type="com.example.spotifyexplained.model.Track"/>
        <variable
            name="viewModel"
            type="com.example.spotifyexplained.ui.detail.TrackDetailPageViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.detail.TrackDetailPageFragment">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="@{viewModel.loadingState == LoadingState.LOADING ? View.VISIBLE : View.GONE}" />

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/my_toolbar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_bar_size"
            android:background="@color/purple_700"
            android:elevation="4dp"
            app:title="@string/track_detail_title"
            app:titleCentered="true"
            app:titleTextAppearance="@style/TextAppearance.AppCompat.Medium"
            app:titleTextColor="@color/white">

            <ImageView
                android:id="@+id/menu_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/info_48px"
                app:tint="@color/white" />

        </com.google.android.material.appbar.MaterialToolbar>

        <com.amar.library.ui.StickyScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            android:layout_below="@id/my_toolbar"
            android:scrollbars="vertical"
            app:stickyHeader="@+id/trackTitle">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:orientation="vertical"
                android:visibility="@{viewModel.loadingState == LoadingState.LOADING ? View.GONE : View.VISIBLE}">


                <ImageView
                    android:id="@+id/second_text"
                    imageUrl="@{viewModel.recommendedTrack.album.albumImages[0].url}"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:padding="10dp" />

                <LinearLayout
                    android:id="@id/trackTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/second_text"
                    android:background="@drawable/background_shadow"
                    android:elevation="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="10dp"
                        android:text="@{viewModel.recommendedTrack.artists[0].artistName}"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="5dp"
                        android:paddingBottom="10dp"
                        android:text="@{viewModel.recommendedTrack.trackName}"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/selected_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/trackTitle"
                    android:layout_centerHorizontal="true"
                    android:background="@color/white"
                    android:fontFamily="sans-serif-light"
                    android:paddingStart="20dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="20dp"
                    android:text="@{viewModel.currentTrackTitle}"
                    android:textAlignment="center"
                    android:textColor="#595959"
                    android:textSize="18sp" />

                <WebView
                    android:id="@+id/web_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/selected_title"
                    android:elevation="0dp" />

                <RelativeLayout
                    android:id="@+id/similar_tracks_list_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/web_view">

                    <TextView
                        android:id="@+id/header_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:textSize="18sp"
                        android:text="Most similar overall"
                        android:layout_marginStart="10dp">
                    </TextView>

                    <ImageView
                        android:id="@+id/info_header"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="6dp"
                        android:src="@drawable/info_48px"
                        android:layout_toEndOf="@id/header_text"
                        android:layout_centerVertical="true">
                    </ImageView>

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/similar_tracks_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/similar_tracks_list_header"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <TextView
                    android:id="@+id/byattr_header_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/similar_tracks_list"
                    android:text="Most similar by feature"
                    android:layout_marginStart="10dp">
                </TextView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/byAttributeLayout"
                    android:layout_below="@+id/byattr_header_text">

                <Spinner
                    android:id="@+id/features_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="10dp" />

                    <ImageView
                        android:id="@+id/info_switch"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="6dp"
                        android:src="@drawable/info_48px"
                        android:layout_toStartOf="@+id/relativeSwitch"
                        android:layout_centerVertical="true">
                    </ImageView>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/relativeSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:text="Absolute" />
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/trackByAttributeList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/byAttributeLayout"
                    android:layout_marginStart="15dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <WebView
                    android:id="@+id/web_view_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_below="@+id/byAttributeLayout" />

                <WebView
                    android:id="@+id/web_view_preview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/trackByAttributeList"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:visibility="@{viewModel.isPremium ? View.GONE : View.VISIBLE}" />

                <RelativeLayout
                    android:id="@+id/premium_player"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/trackByAttributeList"
                    android:visibility="@{viewModel.isPremium ? View.VISIBLE : View.GONE}">

                    <androidx.appcompat.widget.AppCompatSeekBar
                        android:id="@+id/seek_to"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_marginStart="36dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="36dp"
                        android:progressTint="?android:textColorSecondary"
                        android:thumbTint="?android:textColorSecondary" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/play_pause_button"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_below="@+id/seek_to"
                        android:layout_centerHorizontal="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:srcCompat="@drawable/play_arrow_48px" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/connect_play_button"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_below="@+id/seek_to"
                        android:layout_centerHorizontal="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:srcCompat="@drawable/play_arrow_48px" />

                    <Button
                        android:id="@+id/save_remove_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:textColor="?android:textColorSecondary"
                        android:text="@{viewModel.isSaved ? @string/remove_from_library : @string/add_to_library}"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/play_pause_button"
                        android:layout_marginTop="20dp">
                    </Button>
                </RelativeLayout>
            </RelativeLayout>
        </com.amar.library.ui.StickyScrollView>

    </RelativeLayout>
</layout>