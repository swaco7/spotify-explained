<?xml version="1.0" encoding="utf-8"?>

<layout>
    <data>
        <variable
            name="genresExpanded"
            type="Boolean"/>
        <variable
            name="adapter"
            type="com.example.spotifyexplained.adapter.TopGenresHomeAdapter" />
        <variable
            name="title"
            type="String"/>
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_margin="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sectionTitle"
                    android:text="@{title}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/section_header_padding"
                    android:textSize="@dimen/section_header_size"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/section_header_margin">
                </TextView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/topGenres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    adapter="@{adapter}"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">
                </androidx.recyclerview.widget.RecyclerView>

                <TextView
                    android:id="@+id/genresExpand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@{genresExpanded ?  @string/hide : @string/view_all}"
                    android:padding="10dp">
                </TextView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>