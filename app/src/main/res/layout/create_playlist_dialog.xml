<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <EditText
        android:id="@+id/playlistName"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="Playlist name" />
    <EditText
        android:id="@+id/description"
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"
        android:hint="Description"/>
    <RelativeLayout
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/publicText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Public"
            android:layout_margin="4dp"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            />
        <CheckBox
            android:id="@+id/isPublic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:checked="true"
            android:layout_toEndOf="@+id/publicText"
            android:layout_centerVertical="true">
        </CheckBox>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/collaborative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Collaborative"
            android:textSize="18sp"
            android:layout_margin="4dp"
            android:layout_centerVertical="true"
            />
        <CheckBox
            android:id="@+id/isCollaborative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/collaborative"
            android:layout_margin="4dp"
            android:layout_centerVertical="true">
        </CheckBox>

    </RelativeLayout>
</LinearLayout>