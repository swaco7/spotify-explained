<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="artist"
            type="com.example.spotifyexplained.model.Artist" />
        <variable
            name="trackName"
            type="String" />
        <variable
            name="genresAdapter"
            type="com.example.spotifyexplained.adapter.GenresBundleAdapter" />
        <variable
            name="clickHandler"
            type="com.example.spotifyexplained.general.TrackDetailClickHandler"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:focusable="true"
        android:clickable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/image"
            imageUrl="@{artist.images[0].url}"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/name"
            android:layout_toEndOf="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="250dp"
            android:textSize="14sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:text="@{trackName}"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/artistName"
            android:layout_toEndOf="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginStart="5dp"
            android:text="@{artist.artistName}" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/genres"
            adapter="@{genresAdapter}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_toEndOf="@+id/image"
            android:layout_marginStart="5dp"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
    </RelativeLayout>
</layout>
