<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="track"
            type="com.example.spotifyexplained.model.Track"/>
        <variable
            name="trackName"
            type="String"/>
        <variable
            name="clickHandler"
            type="com.example.spotifyexplained.general.TrackDetailClickHandler"/>
        <variable
            name="color"
            type="String"/>
        <variable
            name="similarity"
            type="Double"/>
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:focusable="true"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:onClick="@{() -> clickHandler.onTrackClick(trackName)}">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@{trackName}"
            imageColor="@{color}"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            android:text="@{trackName}" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginEnd="50dp"
            android:layout_gravity="center_vertical"
            android:text='@{String.format("%.2f", similarity)}' />
    </LinearLayout>
</layout>
