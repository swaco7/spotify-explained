<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="track"
            type="com.example.spotifyexplained.model.Track" />
        <variable
            name="genresAdapter"
            type="com.example.spotifyexplained.adapter.GenresAdapter" />
        <variable
            name="clickHandler"
            type="com.example.spotifyexplained.general.TrackDetailClickHandler"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:focusable="true"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        onMyLongClick="@{() -> clickHandler.onTrackLongClick(track)}"
        android:onClick="@{() -> clickHandler.onTrackClick(track)}">

        <ImageView
            android:id="@+id/image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:contentDescription="@{track.trackName}"
            android:layout_centerVertical="true"
            imageUrl="@{track.album.albumImages[0].url}" />

        <TextView
            android:id="@+id/name"
            android:layout_toEndOf="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="250dp"
            android:textSize="14sp"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            android:text="@{track.trackName}"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/artist"
            android:layout_toEndOf="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_margin="5dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:text="@{track.artists[0].artistName}" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/genres"
            adapter="@{genresAdapter}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_toEndOf="@+id/image"
            android:orientation="horizontal"
            android:focusable="true"
            android:clickable="true"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            />

    </RelativeLayout>
</layout>
