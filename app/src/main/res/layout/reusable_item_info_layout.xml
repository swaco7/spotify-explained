<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="com.example.spotifyexplained.model.DetailVisibleType"/>
        <import type="android.view.View" />
        <variable
            name="detailVisibleType"
            type="com.example.spotifyexplained.model.DetailVisibleType" />
        <variable
            name="detailViewVisible"
            type="Boolean" />
        <variable
            name="isTrack"
            type="Boolean" />
        <variable
            name="imageUrl"
            type="String" />
        <variable
            name="artistName"
            type="String" />
        <variable
            name="selectedTrack"
            type="com.example.spotifyexplained.model.Track" />
        <variable
            name="trackClickHandler"
            type="com.example.spotifyexplained.general.TrackDetailClickHandler"/>

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:visibility="@{detailViewVisible &amp;&amp; detailVisibleType == DetailVisibleType.SINGLE ? View.VISIBLE : View.GONE}">
        <RelativeLayout
            android:id="@+id/genreColorLayout"
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/second_text"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                imageUrl="@{imageUrl}">
            </ImageView>
            <RelativeLayout
                android:id="@id/trackTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/second_text"
                android:layout_alignParentTop="true"
                android:background="@drawable/background_shadow_light"
                android:elevation="5dp">
                <TextView
                    android:id="@+id/artistName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/trackName"
                    android:layout_centerHorizontal="true"
                    android:text="@{artistName}"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/trackName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="@{selectedTrack.trackName}"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@+id/trackTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/genreColorList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:layout_toStartOf="@+id/detail_button"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <Button
                    android:id="@+id/detail_button"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    android:onClick="@{() -> trackClickHandler.onTrackClick(selectedTrack)}"
                    android:text="@string/detail"
                    android:textAllCaps="false"
                    android:textColor="?android:textColorSecondary"
                    android:visibility="@{isTrack ? View.VISIBLE : View.GONE}"
                    app:rippleColor="@color/purple_700"
                    app:shapeAppearance="?attr/shapeAppearanceSmallComponent"
                    app:strokeColor="?android:textColorSecondary"
                    app:strokeWidth="1dp" />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>