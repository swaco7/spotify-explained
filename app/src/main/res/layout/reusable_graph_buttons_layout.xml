<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="com.example.spotifyexplained.model.enums.VisualState"/>
        <import type="com.example.spotifyexplained.model.enums.ZoomType"/>
        <import type="android.view.View" />
        <variable
            name="visualState"
            type="com.example.spotifyexplained.model.enums.VisualState" />
        <variable
            name="zoomType"
            type="com.example.spotifyexplained.model.enums.ZoomType" />
        <variable
            name="settings"
            type="com.example.spotifyexplained.model.GraphSettings" />
        <variable
            name="graphClickHandler"
            type="com.example.spotifyexplained.general.GraphClickHandler"/>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackground"
            android:visibility="@{visualState == VisualState.GRAPH ? View.VISIBLE : View.GONE}">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="?attr/selectableItemBackground"
                android:onClick="@{() -> zoomType == ZoomType.BASIC ? graphClickHandler.onResponsiveZoomClick() : graphClickHandler.onBasicZoomClick()}"
                android:src="@{zoomType == ZoomType.BASIC ? @drawable/zoom_responsive_48px : @drawable/zoom_normal_48px}">
            </ImageView>

            <ImageView
                android:id="@+id/icon_tracks"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginStart="10dp"
                app:tint="@color/black"
                android:onClick="@{() -> graphClickHandler.onTrackIconClick()}"
                android:src="@{settings.artistsSelected ? @drawable/person_48px : @drawable/album_48px}">
            </ImageView>

            <ImageView
                android:id="@+id/icon_related"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginStart="10dp"
                android:onClick="@{() -> graphClickHandler.onRelatedIconClick()}"
                android:tint="@{settings.relatedFlag ? @color/black : @color/light_gray}"
                android:src="@drawable/timeline_48px">
            </ImageView>

            <ImageView
                android:id="@+id/icon_genres"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginStart="10dp"
                android:onClick="@{() -> graphClickHandler.onGenreIconClick()}"
                android:tint="@{settings.genresFlag ? @color/black : @color/light_gray}"
                android:src="@drawable/outline_theater_comedy_black_48">
            </ImageView>

            <ImageView
                android:id="@+id/icon_features"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginStart="10dp"
                android:src="@drawable/graphic_eq_48px"
                android:onClick="@{() -> graphClickHandler.onFeatureIconClick()}"
                android:tint="@{settings.featuresFlag ? @color/black : @color/light_gray}">
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="?attr/selectableItemBackground"
            android:visibility="@{visualState == VisualState.GRAPH ? View.VISIBLE : View.GONE}">

            <ImageView
                android:id="@+id/color_info"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginStart="10dp"
                android:src="@drawable/palette_black"
                android:onClick="@{() -> graphClickHandler.onColorInfoClick()}"
                android:tint="@color/black">
            </ImageView>

            <ImageView
                android:id="@+id/icon_info"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginStart="10dp"
                android:src="@drawable/more_horiz_48px"
                android:onClick="@{() -> graphClickHandler.onInfoIconClick()}"
                android:tint="@color/black">
            </ImageView>
        </LinearLayout>
    </RelativeLayout>
</layout>