<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.example.spotifyexplained.model.enums.LoadingState"/>
        <import type="android.view.View" />
        <import type="com.example.spotifyexplained.model.Track"/>
        <variable
            name="state"
            type="com.example.spotifyexplained.model.enums.LoadingState"/>
        <variable
            name="track"
            type="String"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="60dp"
                tools:context=".ui.recommend.spotify.artists.ArtistRecommendFragment"
                android:visibility="@{state == LoadingState.LOADING ? View.GONE : View.VISIBLE}">

                <WebView
                    android:id="@+id/web_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </WebView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="1dp"
                    android:background="@color/gray"
                    />

                <Spinner
                    android:id="@+id/planets_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp" />

                <WebView
                    android:id="@+id/web_view_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </WebView>

            </LinearLayout>


        </ScrollView>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="@{state == LoadingState.LOADING ? View.VISIBLE : View.GONE}" />
    </RelativeLayout>
</layout>